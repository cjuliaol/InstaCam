<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

     <LinearLayout
         android:paddingLeft="16dp"
         android:paddingRight="16dp"
         android:paddingBottom="8dp"
         android:paddingTop="8dp"
         android:gravity="center_vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/feed_item_avatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:src="@drawable/sunset2"/>

        <TextView
            android:layout_marginLeft="16dp"
            android:id="@+id/feed_item_username"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/primary_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"/>

     </LinearLayout>

        <com.example.thewizard.cjuliaol.material.RatioLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ratio="0.50">

            <ImageView
                android:id="@+id/feed_item_photo"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sunset2"/>
        </com.example.thewizard.cjuliaol.material.RatioLayout>


        <TextView
            android:id="@+id/feed_item_caption"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is my first photo"/>

    </LinearLayout>

</android.support.v7.widget.CardView>